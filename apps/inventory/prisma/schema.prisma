generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Inventory {
  id          String       @id @default(uuid())
  itemId      String       @unique
  item        Item         @relation(fields: [itemId], references: [id])
  quantity    Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  moviments   Moviment[]

  @@map("inventory")
}

model Item {
  id          String       @id @default(uuid())
  name        String      
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  inventory   Inventory?
  moviments   Moviment[]

  @@map("item")
}

model Moviment {
  id          String       @id @default(uuid())
  itemId      String
  item        Item         @relation(fields: [itemId], references: [id])
  type        MovimentType
  quantity    Int
  createdAt   DateTime     @default(now())
  inventoryId String
  inventory   Inventory?   @relation(fields: [inventoryId], references: [id])

  @@map("moviment")
}

model InventoryTransactionHistory {
  id           String      @id @default(uuid())
  itemId       String     
  quantity     Int
  inventoryId  String      
  sagaId       String      @unique
  item_name    String
  typeMoviment MovimentType
  createdAt   DateTime     @default(now())

  @@map("inventory_transaction_history")

}

enum MovimentType {
  IN         // entrada
  OUT        // saída
  RESERVE    // reserva temporária
  RELEASE    // liberação de reserva
  ADJUST     // ajuste manual
}