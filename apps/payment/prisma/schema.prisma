generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id         String    @id @unique @default(ulid())
  balance    Int
  created_at DateTime  @default(now())
  payments   Payment[] 

  @@map("customer")
}

model Payment {
  id          Int       @id @unique @default(autoincrement())
  customerId  String
  customer    Customer  @relation(fields: [customerId], references: [id])
  productId   String
  created_at  DateTime  @default(now())

  @@map("payment")
}

model CustomerPaymentHistory {
  id                      String   @id @default(uuid())
  customerId              String
  paymentId               Int     
  balanceAfterPayment     Int
  totalPayable            Int      
  sagaId                  String   @unique
  createdAt               DateTime @default(now())

  @@map("customer_payment_history")

}